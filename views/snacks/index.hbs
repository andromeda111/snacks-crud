<div class="row">
    <div class="container panel panel-default">

        <h2 class="col-xs-6">{{ heading }}</h2>
        <table class="table index-table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Name</th>
                    <th>Origin</th>
                    <th>Type</th>
                    <th>Review</th>
                    <th>Rating</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each snacks}}
                    <tr>
                        <td><img src="{{img_url}}" alt=""></td>
                        <td><a href="/snacks/{{id}}">{{name}}</a></td>
                        <td>{{origin}}</td>
                        <td>{{type}}</td>
                        <td>{{rating}}</td>
                        <td>{{review}}</td>
                        <td><a href="/snacks/{{id}}/edit">Edit</td>
                          <td><form action="/snacks?_method=DELETE" method="post">
                            <input type="submit" name="delete" value="Delete">
                          </form></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>
