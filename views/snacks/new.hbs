<div class="row">
  <div class="col-xs-6 col-xs-offset-3 panel panel-body">
    <h4 class="text-center">Snack Data</h4>

    <form action="/snacks" method="POST" class="col-xs-8 col-xs-offset-2 text-center">
      <div class="form-group">
        <label for="name">Name</label> <input name="name" type="text" class="form-control text-center input-sm">
      </div>
      <div class="form-group">
        <label for="origin">Origin</label> <input name="origin" type="text" class="form-control text-center input-sm">
      </div>
      <div class="form-group">
        <label for="type">Type</label> <input name="type" type="text" class="form-control text-center input-sm">
      </div>
      <div class="form-group">
        <label for="rating">Rating</label> <input name="rating" type="number" min="0" max="5" class="form-control text-center input-sm" placeholder="0-5">
      </div>
      <div class="form-group">
        <label for="review">Review</label> <input name="review" type="text" class="form-control text-center input-sm" placeholder="0-5">
      </div>
      <div class="form-group">
        <label for="img-url">Image URL</label> <input name="img-url" type="text" class="form-control text-center input-sm">
      </div>
      <div class="form-group text-center">
        <input class="btn btn-default" type="submit">
      </div>
    </form>

  </div>

</div>
